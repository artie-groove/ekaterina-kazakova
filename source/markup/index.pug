extends ../templates/html.tpl.pug

block top
	.top
		.logo
			img(src='assets/images/logo.png', width='535', height='78', alt='logo')

block content
	.services
		.quote.font-weight-light
			| &laquo;Хороший юрист тот, который приносит положительный результат&raquo;
		.wrapper
			.row
				.col-md-5.offset-md-6
					h6.text-uppercase.mb-4
						| Гражданам, индивидуальным предпринимателям, юридическим лицам
					ul.list-unstyled
						li Решение вопросов в сфере защиты прав потребителей
						li Взыскание различного вида задолженностей
						li Трудовые споры
						li Представительство в судах общей юрисдикции, арбитраже
						li Подготовка писем, жалоб, исковых заявлений
						li Абонентское юридическое обслуживание
	.price-list
		.wrapper
			.row
				.col-md-10.offset-md-1.col-lg-8.offset-lg-2
					table.table.table-borderless.font-weight-bold
						tr
							td Устные консультации
							td от 300 рублей
						tr
							td Подготовка писем, жалоб, исковых заявлений
							td от 600 рублей
						tr
							td Участие в судебных заседаниях
							td от 2000 рублей
						tr
							td Юридическое сопровождение деятельности
							td от 5000 рублей/месяц
				

block footer
	include ../templates/includes/footer.pug



